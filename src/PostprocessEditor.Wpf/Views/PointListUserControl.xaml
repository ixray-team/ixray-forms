<UserControl x:Class="PostprocessEditor.Views.PointListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:PostprocessEditor"
             mc:Ignorable="d"
             d:DesignHeight="230"
             d:DesignWidth="150">
    <StackPanel Orientation="Vertical">
        <Label Content="Point list" />

        <ListBox Width="150"
                 Height="170" />

        <StackPanel Orientation="Horizontal">
            <Button Content="+"
                    Width="15"
                    Margin="2" />
            <Button Content="-"
                    Width="15"
                    Margin="2" />

            <Button Content="Clear"
                    Margin="2" />
            <Button Content="CopyFrom"
                    Margin="2" />
        </StackPanel>
    </StackPanel>
</UserControl>
